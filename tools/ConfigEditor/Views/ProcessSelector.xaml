<UserControl x:Class="ConfigEditor.Views.ProcessSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Process Targeting" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        
        <!-- Targeting Mode Selection -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <RadioButton x:Name="TargetAllRadio" Content="Target All EQGame.exe Processes" 
                        Margin="0,0,20,0" Checked="TargetMode_Changed"/>
            <RadioButton x:Name="TargetSpecificRadio" Content="Target Specific Processes" 
                        Checked="TargetMode_Changed"/>
        </StackPanel>
        
        <!-- Process List -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="4" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Process List Header -->
                <Grid Grid.Row="0" Background="#4CAF50" Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Available Processes" Foreground="White" 
                              VerticalAlignment="Center" Margin="8,0,0,0" FontWeight="SemiBold"/>
                    <Button Grid.Column="1" x:Name="RefreshButton" Content="Refresh" 
                           Click="Refresh_Click" Margin="0,0,8,0" Padding="8,2" 
                           Background="Transparent" BorderThickness="0" Foreground="White"/>
                </Grid>
                
                <!-- Process List -->
                <ListBox Grid.Row="1" x:Name="ProcessListBox" SelectionMode="Extended" 
                        Background="Transparent" BorderThickness="0" Margin="0,0,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" 
                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding ProcessName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ProcessDescription}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{Binding ProcessId}" 
                                          FontFamily="Consolas" FontSize="11" 
                                          VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- Status and Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText" Text="Targeting all EQGame.exe processes" 
                      VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="SelectAllButton" Content="Select All" Click="SelectAll_Click" 
                   Margin="0,0,5,0" Padding="8,2" IsEnabled="False"/>
            <Button x:Name="ClearAllButton" Content="Clear All" Click="ClearAll_Click" 
                   Padding="8,2" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>