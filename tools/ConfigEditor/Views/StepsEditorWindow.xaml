<Window x:Class="ConfigEditor.Views.StepsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Steps" Height="500" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Add" Click="Add_Click" />
            <Button Content="Delete" Click="Delete_Click" />
            <Separator/>
            <Button Content="OK" Click="Ok_Click" />
            <Button Content="Cancel" Click="Cancel_Click" />
        </ToolBar>
        <DataGrid x:Name="StepsGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False" Margin="8">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="300"/>
                <DataGridTextColumn Header="Modifiers" Binding="{Binding Modifiers}" Width="90"/>
                <DataGridTextColumn Header="Delay (ms)" Binding="{Binding DelayMs}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>


